@model Dictionary<Employee, double>

<h1><b>Calculate salary's employee</b></h1>
<div class="card-header">
    <form asp-controller="Employees" asp-action="CalculateSalary" method="get">
        <div class="row">
            <div class="col-md-12 text-end">
                <div class="form-group">
                </div>
                <div class="form-group">
                    Month: <input type="text" name="Month" />
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

</div>
<div class="card-body p-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col" style="width:150px;" class="text-center">Employee's Name</th>
                <th scope="col" style="width:150px;" class="text-center">Total worked</th>
                <th scope="col" style="width:200px;" class="text-center">Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row" class="text-center align-middle">@item.Key.FirstName @item.Key.LastName</th>
                    <td class="text-center align-middle">@((item.Value/3.125).ToString("##0.##")) Hours/Month</td>
                    <td class="text-center align-middle">@item.Value.ToString("c")</td>
                </tr>
            }
        </tbody>
    </table>
</div>