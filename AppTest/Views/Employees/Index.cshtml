@model IEnumerable<AppTest.Models.Employee>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-12 text-end">
                @*<a asp-controller="Departments" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-square-fill"></i> Add Department</a>*@
            </div>

        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Name</th>
                    <th scope="col" class="text-center">Mail</th>
                    <th scope="col" class="text-center">Address</th>
                    <th scope="col" class="text-center">Birthday</th>
                    <th scope="col" class="text-center">Avatar</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center align-middle">@item.FirstName @item.LastName</th>
                        <td class="text-center align-middle">@item.Email</td>
                        <td class="text-center align-middle">@item.Address</td>
                        <td class="text-center align-middle">@item.Birthday</td>
                        <td class="text-center align-middle">
                            <img src="~/Img/@item.Img" alt="Avatar" width="100" height="100">
                        </td>
                        <td class="text-center align-middle">
                            <a asp-controller="TimeSheets" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-box-arrow-in-up"></i>TimeSheet</a>
                            <a asp-controller="Employees" asp-action="ChangeAvatar" asp-route-Id="@item.Id" class="btn btn-outline-info"><i class="bi bi-box-arrow-in-up"></i>Change Avatar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>